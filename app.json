/* ---------- Components ---------- */

function Center({ children }) {
  return <View style={styles.center}>{children}</View>;
}

function Page({ title, children }) {
  return (
    <View style={styles.page}>
      <Text style={styles.header}>{title}</Text>
      {children}
    </View>
  );
}

function Gap() {
  return <View style={{ height: 12 }} />;
}

/* ---------- Styles ---------- */

const styles = {
  center: {
    flex: 1,
    alignItems: "center",
    justifyContent: "center",
    padding: 20,
  },
  page: {
    flex: 1,
    padding: 20,
  },
  logo: {
    fontSize: 42,
    fontWeight: "bold",
  },
  title: {
    fontSize: 24,
    marginBottom: 20,
  },
  header: {
    fontSize: 20,
    marginBottom: 16,
  },
  input: {
    borderWidth: 1,
    borderColor: "#ccc",
    padding: 12,
    borderRadius: 8,
    marginBottom: 10,
  },
  item: {
    padding: 16,
    borderWidth: 1,
